{
  "name": "code-editor",
  "version": "1.0.0",
  "main": "dist/electron/main.js",
  "scripts": {
    "dev": "concurrently \"vite\" \"npm run electron-dev\"",
    "electron-dev": "npm run build:electron && cross-env NODE_ENV=development electron .",
    "build": "vite build && npm run build:electron",
    "build:electron": "tsc -p tsconfig.json"
  },
  "dependencies": {
    "electron": "^30.0.0",
    "monaco-editor": "^0.44.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  }
}
